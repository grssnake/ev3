sudo apt-get install build-essential
sudo apt-get install python3-dev
sudo apt install libsdl2-dev libfreetype6-dev libsdl2-mixer-dev libsdl2-image-dev libsdl2-ttf-dev libjpeg-dev libpng-dev libportmidi-dev
wget https://github.com/pygame/pygame/releases/download/2.0.0.dev6/pygame-2.0.0.dev6.tar.gz
tar -xzf pygame-2.0.0.dev6.tar.gz
cd pygame-2.0.0.dev6
python3 setup.py install --user
# or "sudo python3 setup.py install" for a system-wide install
